doctype html
html(style="height 100%")
  head
    meta(charset="utf8")
    meta(name="viewport", content="width=device-width, initial-scale=1 shrink-to-fit=no")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css", rel="stylesheet", integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC", crossorigin="anonymous")
    title #{title}
  body
    script(src="/web.js") 
    div(class="container-fluid h-100 d-flex flex-column", style="height: 500px")
      h1(class="display-3 bg-light") #{title}
      div(class="row flex-fill", style="min-height: 0")
        div(class="col-5 mh-100")
          textarea(id="pslInput", name="pslTextArea", cols=100, rows=25, style="font-family: monospace")
        div(class="col-6 border mh-100", style="overflow-y: scroll")
          p(id="parserOutput") Parsed PSL output
      div(class="shadow p-3 md-5 bg-light rounded", id="infoBox")
      div.row
        div.btn-toolbar
          button(class="btn btn-primary", type="button", id="parseCode") Parse
          button(class="btn btn-primary", type="button", id="loadExample") Example
        p(id="parserInfo") Parser Information
