doctype html
html(style="height: 100%;")
  head
    meta(charset="utf-8")
    meta(name="viewport", content="width=device-width, initial-scale=1, shrink-to-fit=no")
    link(href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous")
    //- link(rel="stylesheet", href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css")
    link(rel="stylesheet", href="/jsonview.bundle.css")
    title #{title}
  body(style="height: 100%;")
    script(src="/psl-parser-bundle.js")
    script(src="/jsonview.bundle.js")
    //- script(src="/load-example.js")
    div(class="container-fluid h-100 d-flex flex-column", style="height: 500px;")
      h1(class="display-3 bg-light") PSL Tokenizer, Parser and Linter Test
      div(class="row flex-fill", style="min-height: 0;")
        div(class="col-5 mh-100")
          textarea(id="pslInput", name="pslTextBox", cols="100", rows=25, style="font-family: monospace")
        div(class="col-6 border mh-100", style="overflow-y: scroll;")
          p(id="parsedOutput") This is the output column
      div.row
        div.col-5
          button(class="btn btn-primary mr-5", type="button", id="submitPsl") Parse PSL
          button(class="btn btn-primary mr-5", type="button", id="loadExampleButton") Load Example
      div(class="shadow p-3 md-5 bg-light rounded", id="infoBox")
          p This goes inside the warning box
      div
